{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.bookmark_view'|trans({'%id%': bookmarkId}) }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'title.bookmark_view'|trans({'%id%': bookmarkId}) }}
    </h1>
    {% if bookmark|length %}

        <table>
            <thead>
            <tr>
                <th>{{ 'bookmark_table.title'|trans }}</th>
                <th>{{ 'bookmark_table.url'|trans }}</th>
                <th>{{ 'bookmark_table.tag'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    {{ bookmark.title }}
                </td>
                <td>
                    {{ bookmark.url }}
                </td>
                {#<td>#}
                {#<ul class="tag__list">#}
                {#{% for tag in bookmark.tags %}#}
                {#<li class="tag__item">{{ tag }}</li>#}
                {#{% endfor %}#}
                {#</ul>#}
                {#</td>#}
            </tr>
            </tbody>
        </table>
        <a href="{{ url('bookmark_index') }}" class="table__link table__link--detail"
           title="{{ 'label.back_to_list'|trans }}">
            {{ 'label.back_to_list'|trans }}
        </a>
        <a href="{{ url('bookmark_edit', {'id': bookmark.id}) }}" class="table__link" title="{{ 'label.edit'|trans }}">
            {{ 'label.edit'|trans }}
        </a>
        <a href="{{ url('bookmark_delete', {'id': bookmark.id}) }}" class="table__link"
           title="{{ 'label.delete'|trans }}">
            {{ 'label.delete'|trans }}
        </a>
    {% else %}
        <div>
            {{ 'bookmark_not_found'|trans }}
        </div>
    {% endif %}

{% endblock %}