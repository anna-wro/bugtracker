{% extends 'base.html.twig' %}

{% block title %}{{ 'title.project_delete'|trans({'%id%': project.id, '%name%': project.name}) }}{% endblock %}

{% block body %}
    <h1 class="title is-3">{{ 'title.project_delete'|trans({'%id%': project.id, '%name%': project.name}) }}</h1>
    <p class="has-text-centered">
        {{ 'project_delete'|trans({'%id%': project.id, '%name%': project.name}) }}
    </p>
    {% form_theme form with ['form/form_div_layout.html.twig', 'form/form_errors.html.twig'] %}    {{ form_start(form, { method: 'post', action: url('project_delete', {'id': project.id}) }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'action.delete'|trans }}" class="button is-danger button__delete" />
    {{ form_end(form) }}
    <a href="{{ url('project_index') }}" title="{{ 'label.back_to_list'|trans }}" class="button is-primary is-outlined button__back">
        <span class="fa fa-hand-o-left icon-back" aria-hidden="true"></span>
        {{ 'label.back_to_list'|trans }}
    </a>
{% endblock %}