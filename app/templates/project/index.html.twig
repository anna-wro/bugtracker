{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}{# jakby coś już tu było #}
    <link rel="stylesheet" href="/css/style.css">
{% endblock %}

{% block title %}
    {{ 'title.projects_list'|trans }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'title.projects_list'|trans }}
    </h1>

    {% if paginator.data|length %}
        <table>
            <thead>
            <tr>
                <th>{{ 'project_table.title'|trans }}</th>
                <th>{{ 'project_table.url'|trans }}</th>
                {#<th>{{ 'project_table.tag'|trans }}</th>#}
            </tr>
            </thead>
            <tbody>
            {% for project in paginator.data %}
            <tr>
                <td>
                    {{ project.title }}
                </td>
                <td>
                    {{ project.url }}
                </td>
                {#<td>#}
                    {#<ul class="tag__list">#}
                        {#{% for project in paginator.data %}#}
                            {#<li class="tag__item">{{ project }}</li>#}
                        {#{% endfor %}#}
                    {#</ul>#}
                {#</td>#}
                <td>
                    <a href="{{ url('project_view', {'id': project.id}) }}" class="table__link" title="{{ 'label.view'|trans }}">
                        {{ 'label.view'|trans }}
                    </a>
                </td>
                <td>
                    <a href="{{ url('project_edit', {'id': project.id}) }}" class="table__link" title="{{ 'label.edit'|trans }}">
                        {{ 'label.edit'|trans }}
                    </a>
                </td>
                <td>
                    <a href="{{ url('project_delete', {'id': project.id}) }}" class="table__link" title="{{ 'label.delete'|trans }}">
                        {{ 'label.delete'|trans }}
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>
            {{ 'projects_not_found'|trans }}
        </div>
    {% endif %}
    <a href="{{ url('project_add') }}" class="table__link table__link--detail"
       title="{{ 'label.project_add'|trans }}">
        {{ 'label.project_add'|trans }}
    </a>
    {% include 'default/_paginator.html.twig' with {
    paginator: paginator,
    route_name: 'project_index_paginated',
    } %}
{% endblock %}