{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}{# jakby coś już tu było #}
    <link rel="stylesheet" href="/css/style.css">
{% endblock %}

{% block title %}
    {{ 'title.projects_list'|trans }}
{% endblock %}

{% block body %}
    <h1 class="title is-1">
        {{ 'title.projects_list'|trans }}
    </h1>

    {% if paginator.data|length %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>{{ 'label.project_name'|trans }}</th>
                <th>{{ 'label.project_description'|trans }}</th>
                <th>{{ 'label.project_start_date'|trans }}</th>
                <th>{{ 'label.project_end_date'|trans }}</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for project in paginator.data %}
            <tr>
                <td>
                    {{ project.id }}
                </td>
                <td>
                    {{ project.name }}
                </td>
                <td>
                    {{ project.description }}
                </td>
                <td>
                    {{ project.start_date }}
                </td>
                <td>
                    {{ project.end_date }}
                </td>
                <td>
                    <a href="{{ url('project_view', {'id': project.id}) }}" class="fa fa-eye" title="{{ 'label.view'|trans }}">
                    </a>
                </td>
                <td>
                    <a href="{{ url('project_edit', {'id': project.id}) }}" class="fa fa-pencil" title="{{ 'label.edit'|trans }}">
                    </a>
                </td>
                <td>
                    <a href="{{ url('project_delete', {'id': project.id}) }}" class="fa fa-trash" title="{{ 'label.delete'|trans }}">
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>
            {{ 'projects_not_found'|trans }}
        </div>
    {% endif %}
    <a href="{{ url('project_add') }}" class="button is-primary button__add"
       title="{{ 'label.project_add'|trans }}">
        {{ 'label.project_add'|trans }}
    </a>
    {% include 'default/_paginator.html.twig' with {
    paginator: paginator,
    route_name: 'project_index_paginated',
    } %}
{% endblock %}