{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.bugs_list'|trans }}
{% endblock %}

{% block body %}
    <h1 class="title is-1">
        {{ 'title.bugs_list'|trans }}
    </h1>

    {% if paginator.data|length %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>{{ 'label.bug_name'|trans }}</th>
                <th>{{ 'label.bug_type'|trans }}</th>
                <th>{{ 'label.bug_priority'|trans }}</th>
                <th>{{ 'label.bug_status'|trans }}</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for bug in paginator.data %}
                <tr>
                    <td>
                        {{ bug.id }}
                    </td>
                    <td>
                        {{ bug.name }}
                    </td>
                    <td>
                        {{ bug.type_id }}
                    </td>
                    <td>
                        {{ bug.priority_id }}
                    </td>
                    <td>
                        {{ bug.status_id }}
                    </td>
                    <td>
                        <a href="{{ url('bug_view', {'id': bug.id}) }}" class="fa fa-info"
                           title="{{ 'label.more'|trans }}">
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('bug_edit', {'id': bug.id}) }}" class="fa fa-pencil"
                           title="{{ 'label.edit'|trans }}">
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('bug_delete', {'id': bug.id}) }}" class="fa fa-trash"
                           title="{{ 'label.delete'|trans }}">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>
            {{ 'bugs_not_found'|trans }}
        </div>
    {% endif %}
    <a href="{{ url('bug_add') }}" class="button is-primary button__add"
       title="{{ 'label.bug_add'|trans }}">
        {{ 'label.bug_add'|trans }}
    </a>
    {% include 'default/_paginator.html.twig' with {
    paginator: paginator,
    route_name: 'bug_index_paginated',
    } %}
{% endblock %}