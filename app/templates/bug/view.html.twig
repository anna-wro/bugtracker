{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.bug_view'|trans({'%id%': bugId}) }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'title.bug_view'|trans({'%id%': bugId}) }}
    </h1>

    {% if bug|length %}
        <table>
            <thead>
            <tr>
                <th>{{ 'bug_name'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    {{ bug.id }}
                </td>
                <td>
                    {{ bug.name }}
                </td>
            </tr>
            </tbody>
        </table>
        <a href="{{ url('bug_index') }}" class="table__link table__link--detail"
           title="{{ 'label.back_to_bug_list'|trans }}">
            {{ 'label.back_to_bug_list'|trans }}
        </a>
        <a href="{{ url('bug_edit', {'id': bug.id}) }}" class="table__link" title="{{ 'label.edit'|trans }}">
            {{ 'label.edit'|trans }}
        </a>
        <a href="{{ url('bug_delete', {'id': bug.id}) }}" class="table__link"
           title="{{ 'label.delete'|trans }}">
            {{ 'label.delete'|trans }}
        </a>
    {% else %}
        <div>
            {{ 'bug_not_found'|trans }}
        </div>
    {% endif %}
{% endblock %}