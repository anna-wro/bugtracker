{% extends 'base.html.twig' %}

{% block title %}{{ 'title.bug_delete'|trans({'%id%': bug.id}) }}{% endblock %}

{% block body %}
    <h1>{{ 'title.bug_delete'|trans({'%id%': bug.id}) }}</h1>
    {{ form_start(form, { method: 'post', action: url('bug_delete', {'id': bug.id}) }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-success" />
    {{ form_end(form) }}
    <a href="{{ url('bug_index') }}" title="{{ 'label.back_to_list'|trans }}" class="btn btn-default">
        <span class="fa fa-mail-reply" aria-hidden="true"></span>
        {{ 'label.back_to_list'|trans }}
    </a>
{% endblock %}